<div class="booyah-box col-10 offset-1">
  <h1>Edit Your Book Details Here</h1>
  <%= simple_form_for @book do |f| %>
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :genre %>
    <%= f.input :classification %>
    <%= f.input :book_type %>
    <%= f.input :year %>
    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
</div>