<table class='table'>
  <thread>
    <tr>
      <th scope='col'>Title</th>
      <th scope='col'>Author(s)</th>
      <th scope='col'>Year</th>
    </tr>  
  </thread>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author_names %></td>
        <td><%= book.year %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete, data: {confirm: 'Are you sure you want to delete this book?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>